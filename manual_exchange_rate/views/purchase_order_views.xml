<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    Added new field in purchase order-->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit.exchange.currency.rate</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position='after'>
                <field name="company_currency_id" invisible="1"/>
                <field name="is_exchange" invisible="currency_id == company_currency_id"
                       readonly="state in ['cancel', 'done', 'purchase']"/>
                <field name="rate" digits="[12,6]"
                       readonly="state in ['cancel', 'done', 'purchase']" invisible="1"/>
                <!--                       invisible="is_exchange == False or currency_id == company_currency_id"-->
                <field name="manual_rate_display"
                       invisible="is_exchange == False or currency_id == company_currency_id"
                       readonly="state in ['cancel', 'done', 'purchase']"/>

            </xpath>
            <xpath expr="//field[@name='order_line']/list//field[@name='product_id']" position="after">
                <field name="manual_rate_display" readonly="1" column_invisible="True"/>
                <field name="rate" readonly="1" column_invisible="True"/>
                <field name="is_exchange" readonly="1" column_invisible="True"/>
            </xpath>
            <xpath expr="//group[@class='oe_subtotal_footer']" position="inside">
                <newline/>
                <field name="amount_total_company_manual"
                       widget="monetary"
                       options="{'currency_field': 'company_currency_id'}"
                       readonly="1" invisible="is_exchange == False"/>
                <newline/>
                <field name="custom_tax_total" widget="monetary" readonly="1" invisible="is_exchange == False"/>
                <newline/>
                <field name="custom_total" widget="monetary" readonly="1" invisible="is_exchange == False"/>

            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="attributes">
                <attribute name="invisible">is_exchange</attribute>
            </xpath>
        </field>
    </record>
</odoo>
